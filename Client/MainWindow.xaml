<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">

    <StackPanel Orientation="Vertical" Margin="5">
        <StackPanel Orientation="Horizontal" Margin="10 5">
            <Label Content="Server IP:"/>
            <TextBox x:Name="serverIp" Text="127.0.0.1" Margin="0 0 20 0" VerticalAlignment="Center" Padding="2"/>
            
            <Label Content="Port:"/>
            <TextBox x:Name="serverPort" Text="8090" VerticalAlignment="Center" Padding="2"/>
        </StackPanel>
        
        <Label>Port:</Label>
        <TextBox x:Name="Message" Padding="3" VerticalAlignment="Center" TextWrapping="Wrap">Hello!</TextBox>

        <Button Name="SendButton" Click="SendButton_Click" Padding="0 3" 
                Background="DarkGray" FontWeight="Bold" Foreground="White">
            Send</Button>
        
        <Label FontSize="14">Chat Logs:</Label>
        <TextBlock x:Name="chatLogs" Margin="5" TextWrapping="Wrap"/>
    </StackPanel>
    
</Window>
